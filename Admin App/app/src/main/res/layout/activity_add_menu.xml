<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMenu">


    <EditText
        android:id="@+id/activity_add_menu_add_name"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="10dp"
        android:hint="Add name"
        android:background="@drawable/myrect"
        android:layout_margin="20dp"/>

    <EditText
        android:id="@+id/activity_add_menu_add_description"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Description"
        android:background="@drawable/myrect"
        android:layout_margin="20dp"
        android:layout_below="@id/activity_add_menu_add_name"/>


    <Spinner
        android:id="@+id/activity_add_menu_select_veg_nonveg"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/myrect"
        android:layout_margin="20dp"
        android:entries="@array/veg_nonveg"
        android:layout_below="@id/activity_add_menu_add_description"/>

    <EditText
        android:id="@+id/activity_add_menu_cost"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Cost"
        android:background="@drawable/myrect"
        android:layout_margin="20dp"
        android:layout_below="@id/activity_add_menu_select_veg_nonveg"/>

    <Button
        android:id="@+id/activity_add_menu_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Add"/>





</RelativeLayout>