<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/activity_home_view_orders"
                android:layout_width="match_parent"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp"
                android:layout_marginTop="30dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Orders"
                    android:layout_gravity="center"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/activity_home_bill_request"
                android:layout_marginTop="30dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp"
                android:layout_width="match_parent"
                android:layout_below="@id/activity_home_view_orders"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bill Request"
                    android:layout_gravity="center"
                    />

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:id="@+id/activity_home_add_menu"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_below="@id/activity_home_bill_request">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Menu"
                    android:layout_gravity="center"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/activity_home_assist"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:layout_below="@id/activity_home_add_menu">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assist Alert"
                    android:layout_gravity="center"
                    />
            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>