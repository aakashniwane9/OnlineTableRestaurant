<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/generatebill_recycler_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Name"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/generatebill_recycler_item_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cost"
        android:layout_toLeftOf="@id/generatebill_recycler_item_x"
        android:layout_marginEnd="10dp"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/generatebill_recycler_item_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:layout_toLeftOf="@id/generatebill_recycler_item_quantity"
        android:textSize="20sp"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/generatebill_recycler_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="quantity"
        android:layout_marginEnd="10dp"
        android:layout_alignParentRight="true"
        android:textSize="20sp"/>




</RelativeLayout>